name: Python Tests

on:
  push:
    branches:
      - main
      - develop
      - maneesha
      - 'release/**'
  pull_request:
    branches:
      - main
      - develop
      - maneesha
      - 'release/**'
  workflow_dispatch: # Allows manual trigger

jobs:
  test:
    name: Run Pytest
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.9"

      - name: Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install pytest pytest-cov pytest-github-actions-annotate-failures

      - name: Run Tests with Coverage
        run: |
          pytest --junitxml=report.xml --cov=authorizer --cov-report=term-missing
        continue-on-error: true

      - name: Display Test Report in GitHub Actions
        if: always()
        run: |
          pytest --tb=short --maxfail=5 || true  # Shows failures in the pipeline

      - name: Upload Test Results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: pytest-results
          path: report.xml

      - name: Upload Coverage Report
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: coverage-report
          path: htmlcov/

      - name: Publish Test Report in GitHub UI
        if: always()
        uses: dorny/test-reporter@v1
        with:
          name: Pytest Results
          path: report.xml
          reporter: jest
